{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "lib": ["ES2019", "DOM"],
    "jsx": "react-native",
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/stores/*": ["src/stores/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "expo-router": ["node_modules/expo-router"],
      "expo-router/*": ["node_modules/expo-router/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules"]
}
